<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:id="@+id/head_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFE5E5E5"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/fire_state_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/fire_state_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="以下项需要在点火状态才能读取数值"
            android:textColor="#FF999999"
            android:textSize="10dp"/>

        <View
            android:id="@+id/detail_middle"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FFE5E5E5"
            android:layout_marginTop="10dp"
            android:clickable="false"
            android:focusable="true" />
    </LinearLayout>
    <!-- 车机信息 -->


    <LinearLayout
        android:id="@+id/detail_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/cst_platform_common_single_item"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/wrapper_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/detail_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/cst_platform_common_list_title_color"
                android:textSize="14dp"
                android:paddingLeft="15dp"/>


            <TextView
                android:id="@+id/detail_item_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/detail_item_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#FF999999"
                android:textSize="14dp"/>

        </LinearLayout>

        <View
            android:layout_marginLeft="15dp"
            android:id="@+id/short_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FFE5E5E5"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:id="@+id/long_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFE5E5E5"
        android:visibility="gone" />
</LinearLayout>