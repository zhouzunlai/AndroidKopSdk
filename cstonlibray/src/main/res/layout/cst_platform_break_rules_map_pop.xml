<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
                  android:layout_width="210dp"
                  android:layout_height="wrap_content"
                  android:background="@drawable/cst_platform_car_event_pop_bg"
                  android:orientation="vertical">
    <TextView
        android:id="@+id/relus_popmap_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        android:drawableLeft="@drawable/cst_platform_car_event_pop_time_icon"
        android:drawablePadding="5dp"
        android:text="2016/05/22 15:07"
        android:textColor="#FF000000"
        android:textSize="13dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/relus_popmap_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/cst_platform_car_event_pop_break_rule_account"
            android:drawablePadding="5dp"
            android:text="-3"
            android:textColor="#FF000000"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/relus_popmap_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/cst_platform_car_event_pop_break_rule_cast_icon"
            android:drawablePadding="5dp"
            android:text="100"
            android:textColor="#FF000000"
            android:textSize="13dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/relus_popmap_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/cst_platform_car_event_pop_address_icon"
        android:drawablePadding="5dp"
        android:text="临江路"
        android:textColor="#FF000000"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/relus_popmap_conten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/cst_platform_car_event_pop_event_detail"
        android:drawablePadding="5dp"
        android:text="违犯禁停标志"
        android:textColor="#FF000000"
        android:textSize="13dp"/>
</LinearLayout>
</LinearLayout>